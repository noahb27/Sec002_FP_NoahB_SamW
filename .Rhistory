library(httr)
library(jsonlite)
library(dplyr)
library(readr)
url <- "https://store.steampowered.com/api/featuredcategories"
response <- GET(url, user_agent("R Steam Project"))
txt <- content(response, "text", encoding = "UTF-8")
data <- fromJSON(txt, flatten = TRUE)
# Turn the two categories into data frames
nr <- as_tibble(data$new_releases$items)
sp <- as_tibble(data$specials$items)
# (Optional) Inspect columns once to see what's available
names(nr)
# names(sp)
# Combine, drop duplicates, keep core fields
apps_df <- bind_rows(nr, sp) |>
distinct(id, .keep_all = TRUE) |>
select(
appid = id,
name,
final_price
)
# Convert price from cents to USD
apps_df <- apps_df |>
mutate(price_usd = final_price / 100)
# Quick check
dim(apps_df)
head(apps_df)
# Save to CSV
write_csv(apps_df, "steam_recent_sample.csv")
nrow(apps_df)
